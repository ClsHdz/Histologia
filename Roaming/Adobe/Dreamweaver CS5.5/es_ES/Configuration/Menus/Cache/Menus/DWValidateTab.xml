<menuitem id="DWValidateTab_AddToFilter" name="Ocultar error" enabled="dw.resultsPalette.canOpenInEditor();" command="dw.resultsPalette.addToFilter()" domRequired="false" />
<menuitem id="DWValidateTab_EnableFilter" name="Mostrar todo" checked="!dw.resultsPalette.isFilterEnabled()" command="dw.resultsPalette.enableFilter()" domRequired="false" />
<menuitem id="DWValidateTab_MoreInfo" name="Más info..." enabled="dw.resultsPalette.canDetailInfo();" command="dw.resultsPalette.detailInfo()" domRequired="false" />
<separator />
<menuitem id="DWValidateTab_OpenInBrowser" name="Abrir resultados en el navegador" enabled="dw.resultsPalette.canOpenInBrowser();" command="dw.resultsPalette.openInBrowser()" domRequired="false" />
<menuitem id="DWValidateTab_Save" name="Guardar resultados..." enabled="dw.resultsPalette.canSave();" command="dw.resultsPalette.save()" domRequired="false" />
